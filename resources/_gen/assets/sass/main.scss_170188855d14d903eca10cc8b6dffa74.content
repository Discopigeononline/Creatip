body{width:90vw;font-family:times new roman,serif;color:#2f4f4f;background-color:#f2e8cf;line-height:1.5}.content{padding:1vw 3vw}.main-header{position:sticky;top:0;left:0}nav ul{list-style:none}nav ul a{color:#2f4f4f;font-size:1.2rem;font-weight:700;padding:1rem 2rem;display:inline-block;transition:color .3s ease;text-decoration:none}nav ul a:hover{color:#8b4513}nav ul li{display:inline}.scrolltop{text-decoration:none}footer{bottom:0;left:0;width:100vw;background:tan;font-size:.7em;text-align:center}