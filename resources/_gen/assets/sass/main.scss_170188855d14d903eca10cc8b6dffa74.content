body{font-family:times new roman,sans-serif;color:#4b4b4b;background-color:#fff;line-height:1.5;margin:0}body h1,body h2,body h3,body h4,body h5,body h6,body li{font-family:courier new,serif}#page{display:flex;flex-direction:column;background-color:#fff;margin-bottom:50vh}.main-header{position:sticky;height:12vh;top:0;left:0;right:0;background-color:#fff;border-bottom:1px solid #e2e2e2}.navbar{display:flex;justify-content:flex-start;justify-content:space-between;align-items:center;height:12vh;margin:auto 3vw}.logo{height:140px;width:140px;user-select:none}#overlay-button{justify-content:flex-end;cursor:pointer;z-index:5;user-select:none}#overlay-button span{height:6px;width:50px;border-radius:2px;background-color:#ebb94d;position:relative;display:block;transition:all .25s ease-in-out}#overlay-button span:before{top:-10px}#overlay-button span:after{top:10px}#overlay-button span:before,#overlay-button span:after{height:6px;width:50px;border-radius:2px;background-color:#ebb94d;position:absolute;content:"";transition:all .2s ease-in-out}input[type=checkbox]{display:none}input[type=checkbox]:checked~#overlay{display:block}input[type=checkbox]:checked~#overlay-button:hover span,input[type=checkbox]:checked~#overlay-button span{background:0 0}input[type=checkbox]:checked~#overlay-button span:before{transform:rotate(45deg)translate(7px,7px);opacity:1}input[type=checkbox]:checked~#overlay-button span:after{transform:rotate(-45deg)translate(7px,-7px)}#overlay{position:fixed;top:0;left:0;width:100%;height:100%;background:#4b4b4b;z-index:4;display:none;position:fixed}#overlay #menu{display:flex;justify-content:center;align-items:center;flex-direction:column;text-align:center;height:100vh;z-index:4;list-style-type:none}#overlay #menu .menu-item{padding:1em}#overlay #menu .menu-item a{color:#ebb94d;text-decoration:none;font-size:70px}#overlay #menu .menu-item a:hover{color:#fff}.content-wrap{margin:0 3vw;text-align:justify}#bg-hero{height:88vh;background-image:image-set("/images/hero-mobile.avif" type("image/avif"),"/images/hero-mobile.png" type("image/png"));background-attachment:fixed;background-position:50%;background-repeat:no-repeat;background-size:cover;display:flex}#bg-hero #title-overlay{width:100%;background:rgba(0,0,0,.3);display:flex;justify-content:center}#bg-hero h1{font-family:courier new,Courier,monospace;width:100%;color:#fff;font-size:calc(25px + 2vw);font-weight:700;line-height:calc(1em + 3vh);padding-left:3vw}#bg-hero h1 .title-item{padding-left:calc(34px + 2vw)}#bg-hero h1 .uppercase{font-size:2.5em}.list-items{list-style-type:none;padding:0;margin:3vw}.list-items:hover .item{color:#d3d3d3}.list-items .item{color:#000;text-decoration:none;transition:color .3s ease}.list-items .item:hover{color:#000}.back_to_top{align-self:flex-end;width:100px;height:100px}footer{position:fixed;bottom:0;height:45vh;z-index:-2;display:flex;flex-direction:column;width:100%;background:#ebb94d;text-align:center;text-decoration:none;color:#4b4b4b;font-size:20px}footer #footer-eco,footer #conception{display:inline-block;border-top:1px solid #e2e2e2}footer .creator{color:inherit;text-decoration:none}@media screen and (min-width:1000px){#bg-hero{height:90vh;background-image:url(/images/hero-desktop.png);background-image:image-set("/images/hero-desktop.avif" type("image/avif"),"/images/hero-desktop.png" type("image/png"));background-attachment:fixed;background-size:100% 100%}}
