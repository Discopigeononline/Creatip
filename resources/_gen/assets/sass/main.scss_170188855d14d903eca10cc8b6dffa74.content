body{font-family:times new roman,serif;color:#2f4f4f;background-color:#f2e8cf;line-height:1.5;margin:0}#page{height:100%;min-height:100vh;display:flex;flex-direction:column}#content-wrap{flex-grow:1 0 auto;margin:0 5vw}#bg-hero{height:100vh;background-image:url(/images/hero-mobile.jpg);background-image:image-set("/images/hero-mobile.webp" type("image/webp"),"/images/hero-mobile.jpg" type("image/jpeg"));background-attachment:scroll;background-position:50%;background-repeat:no-repeat;background-size:cover}.main-header{position:sticky;height:12vh;top:0;left:0;right:0;background-color:rgba(242,232,207,.7);backdrop-filter:blur(3px);-webkit-backdrop-filter:blur(3px);box-shadow:0 .005em #8B4513}.navbar{display:flex;justify-content:space-between}.logo{margin:1vh 2.5vw}#menu-wide{display:none}#overlay-button{right:2em;top:3em;padding:26px 11px;z-index:4;cursor:pointer;user-select:none}#overlay-button span{height:4px;width:35px;border-radius:2px;background-color:#2f4f4f;position:relative;display:block;transition:all .25s ease-in-out}#overlay-button span:before{top:-10px;visibility:visible}#overlay-button span:after{top:10px}#overlay-button span:before,#overlay-button span:after{height:4px;width:35px;border-radius:2px;background-color:#2f4f4f;position:absolute;content:"";transition:all .2s ease-in-out}input[type=checkbox]{display:none}input[type=checkbox]:checked~#overlay{visibility:visible}input[type=checkbox]:checked~#overlay-button:hover span,input[type=checkbox]:checked~#overlay-button span{background:0 0}input[type=checkbox]:checked~#overlay-button span:before{transform:rotate(45deg)translate(7px,7px);opacity:1}input[type=checkbox]:checked~#overlay-button span:after{transform:rotate(-45deg)translate(7px,-7px)}#overlay{height:100vh;width:100vw;background:tan;z-index:3;visibility:hidden;position:fixed}#overlay.active{visibility:visible}#overlay #menu-mobile{display:flex;justify-content:center;align-items:center;flex-direction:column;text-align:center;height:100vh;z-index:4;list-style-type:none}#overlay #menu-mobile .menu-item{padding:1em}#overlay #menu-mobile .menu-item a{color:#2f4f4f;text-decoration:none;font-size:2.5em}footer{display:flex;flex-wrap:wrap;width:100%;background:tan;font-size:.7em;text-align:center;text-decoration:none}footer .back_to_top{border-style:solid;border-radius:100%}@media screen and (min-width:930px){#overlay-button{display:none}#menu-wide{display:block;list-style:none;display:flex;justify-content:space-evenly;overflow:hidden;line-height:1.5em}#menu-wide .menu-wide-item{display:flex;justify-content:center;align-items:center;padding-right:2rem;font-size:1.6em;font-weight:bolder}#menu-wide .menu-wide-item a{color:#8b4513;text-decoration:none;transition:all .2s ease-in-out}#menu-wide .menu-wide-item a:hover{color:gold}#bg-hero{background-image:url(/images/hero-desktop.jpg);background-image:image-set("/images/hero-desktop.webp" type("image/webp"),"/images/hero-desktop.jpg" type("image/jpeg"));background-attachment:fixed}}